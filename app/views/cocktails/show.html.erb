<div class="container mt-5">

  <p id="notice"><%= notice %></p>
  <h1><%= @cocktail.name %></h1>
  <div>

    <div>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    </div>
    <div>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
          <%= dose.ingredient.name %> <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient}?" } do %>
         <i class="fas fa-trash"></i>
          <% end %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <%= link_to 'Add doses', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'%>
  <%= link_to 'Back to list', cocktails_path, class: 'btn btn-dark'%>

</div>




