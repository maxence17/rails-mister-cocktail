<div class="container mt-5">

  <p id="notice"><%= notice %></p>
  <p>
    <h1><%= @cocktail.name %></h1>
  </p>
  <p>
    <%= @cocktail.name %>
  </p>
  <p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.ingredient.name %>
      </li>
      <li>
        <%= dose.description %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add doses', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'%>
</div>




